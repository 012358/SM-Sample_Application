<section id="main-content">
  <section class="wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header"> New Calendar</h3>
        <ol class="breadcrumb">
          <li><%= link_to 'Calender Events', events_path%></li>
          <li><%= link_to 'New Event', new_event_path%></li>
          <li><%= link_to 'Calenders Reports', calendars_path  %></li>
          <li>New Calendar</li>
        </ol>
      </div>
    </div>
    <div class="col-md-6 portlets">
      <div class="panel panel-default">
        <div class="panel-heading">Calendar
        </div>
        <div class="panel-body">
          <div class="padd">

            <div class="quick-post">
              <div class="form-horizontal">
                <%= form_for(@calendar, url:{action:  @calendar.new_record? ? :create : :update}) do |f| %>
                    <div class="form-group">
                      <%= f.hidden_field :user_id, value: current_user.id %>
                      <label class="control-label col-lg-2" for="title">Name</label>
                      <div class="col-lg-10">
                        <%= f.text_field :name, placeholder: 'Calendar Name', class: 'form-control' %>
                      </div>
                    </div>
                    <!-- Content -->
                    <div class="form-group">
                      <label class="control-label col-lg-2" for="content">Color</label>
                      <div class="col-lg-10">
                        <%= f.text_field :color, placeholder: 'Calendar Color', class: "custom" %>
                      </div>
                    </div>

                    <div class="form-group">
                      <!-- Buttons -->
                      <div class="col-lg-offset-2 col-lg-9">
                        <%= f.submit f.object.new_record? ? 'Create' : 'Update', class: 'btn btn-primary'%>
                        <%= link_to 'Cancel', url_for(:back), class: 'btn btn-default' %>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>

</div></div></div>
          </div>
  </section>
</section>


