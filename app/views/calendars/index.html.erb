<div class="main-container">
  <div class="other_containers">
        <br><br>

        <table class="ui compact table data-listing">
          <thead>
            <tr>
              <th>Name</th>
              <th>Color</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @calendars.each do |calendar| %>
              <tr>

                <td><%= calendar.name %></td>
                <td><%= calendar.color %></td>
                <td>
                <%= link_to(semantic_icon('pencil').html_safe, edit_calendar_path(calendar)) %>

                <%= link_to(semantic_icon('trash').html_safe, calendar, data: {method: :delete, confirm: 'Are you sure?'})%>
                  <%= link_to(semantic_icon('unhide').html_safe, calendar) %>

              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
    <div style="color: #006600">
      1. Show All Calendar.<br>
      2. Edit, Delete, Show(with all Events of associated Calendar).
      </div>

</div>
    </div>