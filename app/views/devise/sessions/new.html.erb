<div class="main-container">
  <div class="other_containerrs">
    <div style="margin: 30px 0 0 0;">
      <div class="bxslider">
        <%= image_tag '1.jpg'%>
        <%= image_tag '2.jpg'%>
        <%= image_tag '3.jpg'%>
        <%= image_tag '4.jpg'%>
        <%= image_tag '6.jpg'%>

      </div>
    </div>


<div style="margin: 1px 0 0 350px;">





      <h2><font color="red"><%= flash[:error] %></font></h2>
      <h2>
        <font color="#696969">
          Login Please <br>
        </font>
      </h2>


      <hr align="left" width="30%"><br>

      <div class="ui form">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="fields">
              <div class=" eight wide field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, placeholder: 'sajjad.murtaza49@yahoo.com' %>
              </div>
            </div>

            <div class="fields">
              <div class=" eight wide field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="fields">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: 'ui blue mini submit button ok' %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>




    </div>

   </div>
</div>

<script>
    $(document).ready(function () {
    $('.bxslider').bxSlider({
    auto: true,
    autoControls: true
    });
    });
</script>