section#main-content
  section.wrapper
    - @enumerations.subclasses.each do |subclass|

      .col-lg-7.col-md-12
        .panel.panel-default
          .panel-heading
            = link_to subclass, new_enumeration_path(type: subclass)
            table.table.bootstrap-datatable.countries
              thead
                tr
                  th.three.wide Type
                  th.three.wide Name
                  th.three.wide Value
                  th.three.wide Action

              tbody
                - @enumerations.where(type: subclass).each_with_index do |enumeration, index|
                  tr
                    td
                      - if index == 0
                        = enumeration.type
                    td = enumeration.name
                    td = enumeration.value
                    /td = link_to 'Show', enumeration_path(enumeration)
                    td
                      = link_to 'Edit', edit_enumeration_path(enumeration)
                      |  |
                      = link_to 'Delete', enumeration_path(enumeration), data: {:confirm => 'Are you sure?'}, :method => :delete
