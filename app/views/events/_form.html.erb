<section id="main-content">
  <section class="wrapper">
    <div class="col-md-6 portlets">
      <div class="panel panel-default">
        <div class="panel-heading">Calendar
        </div>
        <div class="panel-body">
          <div class="padd">

            <div class="quick-post">
              <div class="form-horizontal">
                  <%= form_for(@event) do |f| %>

                      <% if @event.errors.any? %>
                          <div id="error_explanation">
                            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                            <ul>
                              <% @event.errors.full_messages.each do |message| %>
                                  <li><%= message %></li>
                              <% end %>
                            </ul>
                          </div>
                      <% end %>

                    <div class="form-group">
                      <label class="control-label col-lg-2" for="title">Calendar</label>
                      <div class="col-lg-10">
                          <%= f.text_field :calendar_id, class: "single-field",data: {options: Calendar.all} %>
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="control-label col-lg-2" for="title">Title</label>
                      <div class="col-lg-10">
                          <%= f.text_field :title, placeholder: 'title', class: 'form-control' %>
                      </div>
                    </div>

                      <div class="form-group">
                          <label class="control-label col-lg-2" for="title">Description</label>
                        <div class="col-lg-10">
                          <%= f.text_field :description, placeholder: 'description', class: 'form-control' %>
                        </div>
                      </div>

                    <div class="form-group">
                      <label class="control-label col-lg-2" for="title">Start Date</label>
                      <div class="col-lg-10">
                          <%= f.text_field :start, placeholder: 'Start Time', class: "datetimepicker form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="control-label col-lg-2" for="title">End Date</label>
                      <div class="col-lg-10">
                       <%= f.text_field :end, placeholder: 'End Time', class: "datetimepicker form-control" %>
                      </div>
                    </div>

                      <div class="actions">
                        <%= f.submit f.object.new_record? ? 'Create' : 'Update', class: 'btn btn-primary'%>
                        <%= link_to 'Cancel', url_for(:back), class: 'btn btn-default' %>
                      </div>
                  <% end %>
              </div>
            </div>

          </div></div></div>
    </div>
  </section>
</section>


<script>
    $('.datetimepicker').datetimepicker({
        format:'d-m-Y H:i:s'
    });
</script>